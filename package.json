{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "tsc -w",
    "compile": "tsc",
    "clean": "del packages/**/*.js packages/**/*.js.map packages/**/*.d.ts packages/**/*.d.ts.map",
    "dev": "polyserve",
    "prpl": "prpl-server --root packages/pkg1 --config polymer.json",
    "pub": "lerna run tsc && lerna publish"
  },
  "dependencies": {
    "@floreysoft/dialog": "^0.2.11",
    "@formsey/core": "^0.0.2",
    "@formsey/fields-vaadin": "^0.0.2",
    "@vaadin/vaadin-button": "^2.1.3",
    "@vaadin/vaadin-context-menu": "^4.3.1",
    "@vaadin/vaadin-split-layout": "^4.1.0"
  },
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "del-cli": "^1.1.0",
    "lerna": "^3.13.0",
    "polyserve": "^0.27.15",
    "prpl-server": "^1.4.0",
    "typescript": "^3.3.3"
  }
}
