{
  "name": "formsey",
  "description": "A new approach to create responsive forms using Web Components",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "dependencies": "lerna bootstrap",
    "compile": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf ./output && rm -rf ./dist && rm -rf ./umd && rm -rf ./lib && node_modules/.bin/del packages/**/*.js !packages/formsey-fields-vaadin/webpack-resolver.js packages/**/*.js.map packages/**/umd packages/**/es packages/**/*.d.ts packages/**/*.d.ts.map demos/**/*.js demos/**/*.js.map demos/**/*.d.ts demos/**/*.d.ts.map",
    "pub": "lerna run tsc && yarn umd && lerna publish",
    "forcePub": "lerna run tsc && yarn umd && lerna publish --force-publish",
    "link": "lerna run link",
    "unlink": "lerna run unlink",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack-dev-server --watch --open  --config webpack.dev.js",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "umd": "webpack --config webpack.umd.js",
    "es": "webpack --config webpack.es.js",
    "publishLib": "webpack --config webpack.umd.js && node publishLibs.js",
    "stats": "webpack --config webpack.libs.js  --profile --json > lib-stats.json",
    "docs": "npx @appnest/readme generate",
    "rollup": "rollup --config"
  },
  "devDependencies": {
    "@appnest/readme": "^1.2.7",
    "@babel/core": "^7.3.4",
    "@google-cloud/storage": "^4.7.0",
    "@open-wc/building-rollup": "^1.4.2",
    "@open-wc/testing": "^2.5.15",
    "@open-wc/testing-karma": "^3.3.17",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/mocha": "^7.0.2",
    "babel-loader": "^8.0.5",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^7.0.2",
    "deepmerge": "^4.2.2",
    "del-cli": "^3.0.0",
    "es-dev-server": "^1.56.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.1",
    "karma": "^5.0.2",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.13.0",
    "lerna-update-wizard": "^0.17.8",
    "minify-lit-html-loader": "^0.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-styles": "^3.10.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^7.0.1",
    "typescript": "^3.3.3",
    "webpack": "^5.0.0-beta.24",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "contributors": [
    {
      "name": "Daniel Florey",
      "url": "https://twitter.com/danielflorey",
      "img": "https://avatars0.githubusercontent.com/u/2938750?s=460&v=4"
    },
    {
      "name": "Oliver Zeigermann",
      "url": "https://github.com/DJCordhose",
      "img": "https://avatars0.githubusercontent.com/u/394409?s=460&v=4"
    },
    {
      "name": "You?",
      "img": "https://joeschmoe.io/api/v1/random",
      "url": "https://github.com/andreasbm/weightless/blob/master/CONTRIBUTING.md"
    }
  ]
}
