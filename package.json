{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "dependencies": "lerna bootstrap",
    "compile": "tsc",
    "clean": "node_modules/.bin/del packages/**/*.js !packages/formsey-fields-vaadin/webpack-resolver.js packages/**/*.js.map packages/**/*.d.ts packages/**/*.d.ts.map demos/**/*.js demos/**/*.js.map demos/**/*.d.ts demos/**/*.d.ts.map",
    "pub": "lerna run tsc && lerna publish",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack-dev-server --open  --config webpack.dev.js",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@open-wc/testing": "^0.9.23",
    "@open-wc/testing-karma": "^0.4.13",
    "@types/mocha": "^5.2.6",
    "babel-loader": "^8.0.5",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "karma": "^4.0.1",
    "karma-webpack": "^3.0.5",
    "lerna": "^3.13.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}
