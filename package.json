{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "scripts": {
    "dependencies": "lerna bootstrap",
    "compile": "tsc",
    "watch": "tsc -w",
    "clean": "rm -rf ./dist && rm -rf ./lib && node_modules/.bin/del packages/**/*.js !packages/formsey-fields-vaadin/webpack-resolver.js packages/**/*.js.map packages/**/*.d.ts packages/**/*.d.ts.map demos/**/*.js demos/**/*.js.map demos/**/*.d.ts demos/**/*.d.ts.map",
    "pub": "lerna run tsc && lerna publish",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack-dev-server --open  --config webpack.dev.js",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "lib": "webpack --config webpack.libs.js && node publishLibs.js",
    "stats": "webpack --config webpack.libs.js  --profile --json > lib-stats.json"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@google-cloud/storage": "^4.7.0",
    "@open-wc/testing": "^2.5.15",
    "@open-wc/testing-karma": "^3.3.17",
    "@types/mocha": "^7.0.2",
    "babel-loader": "^8.0.5",
    "copyfiles": "^2.1.0",
    "cross-env": "^7.0.2",
    "del-cli": "^3.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.1",
    "karma": "^5.0.2",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.13.0",
    "lerna-update-wizard": "^0.17.8",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^7.0.1",
    "typescript": "^3.3.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}
