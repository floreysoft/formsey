{
    "compilerOptions": {
      "target": "es6",
      "module": "es2015",
      "moduleResolution": "node",
      "lib": ["es2018", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "strict": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "pretty": true,
      "useDefineForClassFields": false,
      "skipLibCheck": true
    },
    "include": [
      "custom_typings/**/*.ts",
      "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.d.ts",
        "**/*.spec.ts"
    ],
    "plugins": [
      {
          "name": "typescript-lit-html-plugin"
      }
    ]
}