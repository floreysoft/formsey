{
    "compilerOptions": {
      "target": "es2017",
      "module": "es2015",
      "moduleResolution": "node",
      "lib": ["es2018", "dom"],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "strict": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "experimentalDecorators": true
    },
    "include": [
      "custom_typings/**/*.ts",
      "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.d.ts"
    ],
    "plugins": [
      {
          "name": "typescript-lit-html-plugin"
      }
    ]
}
